<div class='field form-group form-row each_ingredient'>
  <%= f.label :ingredient, class: 'col-form-label' %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.label :grocery_section, class: 'col-form-label' %>
  <%= f.collection_select :grocery_section_id, GrocerySection.all, :id, :name, {prompt: true}, {class: 'form-control'} %>

  <% f.hidden_field :_destroy %>
  <%= link_to "Remove", 'javascript:void(0)', class: 'remove_fields btn btn-danger' %>
</div>
